<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="55"
        android:padding="5dp"
        android:text="@string/instructions"
        android:weightSum="100"/>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="45"
        android:paddingLeft="5dp"
        android:weightSum="100"
        tools:context="com.jpmeijers.ttnmapper.Device">


        <Button
            android:id="@+id/buttonStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="onStartClick"
            android:text="Start"/>

        <CheckBox
            android:id="@+id/checkBoxFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/editTextTopic"
            android:checked="false"
            android:text="Log to file"/>

        <CheckBox
            android:id="@+id/checkBoxServer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewTopic"
            android:layout_alignStart="@+id/textViewTopic"
            android:layout_below="@+id/editTextTopic"
            android:checked="true"
            android:text="Log to server"/>

        <TextView
            android:id="@+id/textViewServer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="MQTT Server"/>

        <EditText
            android:id="@+id/editTextServer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewServer"
            android:hint="@string/tcp_staging_thethingsnetwork_org_1883"
            android:singleLine="true"
            android:text="@string/tcp_staging_thethingsnetwork_org_1883"/>

        <EditText
            android:id="@+id/editTextUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editTextPassword"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/editTextPassword"
            android:layout_below="@+id/editTextServer"
            android:hint="0000000000000000"
            android:singleLine="true"
            android:text="0000000000000000"/>

        <TextView
            android:id="@+id/textViewUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editTextServer"
            android:text="App EUI"/>

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/editTextUser"
            android:layout_toEndOf="@+id/textViewTopic"
            android:layout_toRightOf="@+id/textViewTopic"
            android:hint="s0m3We1rD/enCrypted+String="
            android:singleLine="true"
            android:text="s0m3We1rD/enCrypted+String="/>

        <TextView
            android:id="@+id/textViewPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editTextUser"
            android:text="Access Key"/>

        <EditText
            android:id="@+id/editTextTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/editTextPassword"
            android:layout_toEndOf="@+id/textViewTopic"
            android:layout_toRightOf="@+id/textViewTopic"
            android:hint="+/devices/#"
            android:singleLine="true"
            android:text="+/devices/#"/>

        <TextView
            android:id="@+id/textViewTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editTextPassword"
            android:text="MQTT Topic"/>


    </RelativeLayout>


</LinearLayout>
